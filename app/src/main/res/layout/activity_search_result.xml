<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchResult">

    <LinearLayout
        android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/searchResultFrom"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Basic Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to"/>

    <TextView
        android:id="@+id/searchResultTo"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Basic Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Date"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/searchResultDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/searchResultTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of Passengers:"/>

        <TextView
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:id="@+id/searchResultCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="#03A9F4">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/timeSlotstart1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00AM"
            android:textSize="15dp"
            android:textColor="#FFF"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/timeSlotEnd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00PM"
            android:textSize="15dp"
            android:textColor="#FFF"
            />

        <TextView
            android:layout_marginLeft="140dp"
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$25"
            android:textSize="15dp"
            android:textColor="#FFF"
            />
    </LinearLayout>

    <Button
        android:id="@+id/confirmBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"/>
</LinearLayout>